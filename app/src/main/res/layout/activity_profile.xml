<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="50dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottom-sheet.BottomSheetBehavior">
    <LinearLayout
        android:gravity="center"
        android:id="@+id/BootomSheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="30sp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_margin="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update information "
                android:textSize="22sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="left"/>

            <TextView
                android:layout_marginBottom="10sp"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtUsername"
                android:textStyle="bold"
                android:text="Sao Nghuyen"/>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="PhoneNumber"
                    android:textSize="15sp"
                    android:paddingBottom="10dp"/>
                <EditText
                    android:padding="15dp"
                    android:id="@+id/editPhone"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:hint="Enter you phone"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:background="@drawable/search_background3"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Adress"
                    android:textSize="15sp"
                    android:paddingBottom="10sp"/>

                <EditText
                    android:id="@+id/editAddress"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:background="@drawable/search_background3"
                    android:gravity="center_vertical"
                    android:hint="Enter your address"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Email"
                    android:textSize="15sp"
                    android:paddingBottom="10sp"/>
                <EditText
                    android:id="@+id/editEmail"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:hint="Enter your email address"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:background="@drawable/search_background3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Password"
                    android:paddingBottom="10sp"
                    android:textSize="15sp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/editPass"
                        android:padding="15dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:hint="Enter your password"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:inputType="textPassword"
                        android:background="@drawable/search_background3"/>

                    <ImageButton
                        android:id="@+id/btnShowPassword1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:padding="15dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/eye_off_icon"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:paddingBottom="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Password new"
                    android:textSize="15sp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/editPassNew"
                        android:padding="15dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:hint="Enter your password new"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:inputType="textPassword"
                        android:background="@drawable/search_background3"/>

                    <ImageButton
                        android:visibility="gone"
                        android:id="@+id/btnShowPassword2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:padding="15dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/eye_off_icon"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Password new again"
                    android:textSize="15sp"
                    android:paddingBottom="10sp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/editPassAgain"
                        android:padding="15dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:hint="Enter your password new again"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:inputType="textPassword"
                        android:background="@drawable/search_background3"/>

                    <ImageButton
                        android:visibility="gone"
                        android:id="@+id/btnShowPassword3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:padding="15dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/eye_off_icon"/>
                </RelativeLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/txtForgot"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot pass?"
                android:layout_marginBottom="5dp"
                android:textColor="@color/icon_ative_color"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="RESET UPDATE"
                android:textColorHint="@color/white"
                android:textStyle="bold"
                android:background="@drawable/check_out_button"
                android:layout_marginBottom="30dp"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>