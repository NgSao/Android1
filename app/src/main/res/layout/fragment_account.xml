<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fagments.AccountFragment">

    <!-- TODO: Update blank fragment layout -->
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <LinearLayout
           android:layout_marginTop="40dp"
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:orientation="vertical"
           android:gravity="center">
           <ImageView
               android:id="@+id/imgAvatar"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/account1"
               tools:ignore="MissingClass" />
           <TextView
               android:id="@+id/txtUsername"
               android:textStyle="bold"
               android:textSize="24sp"
               android:textColor="@color/black"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Sao Nguyen"/>
           <TextView
               android:id="@+id/txtEmail"
               android:textSize="18sp"
               android:textColor="#9B9999"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="nguyensaovn2019@gmail.com"/>
       </LinearLayout>
       <LinearLayout
           android:id="@+id/LinearProfile"
           android:layout_marginTop="10dp"
           android:layout_marginBottom="15dp"
           android:layout_marginHorizontal="20dp"
           android:layout_gravity="center"
           android:background="@drawable/accout_background"
           android:layout_width="match_parent"
           android:layout_height="50dp">
           <ImageView
               android:layout_width="50dp"
               android:layout_height="30dp"
               android:src="@drawable/account_icon2"
               android:layout_gravity="center"/>
           <TextView
               android:textColor="@color/black"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Profile"
               android:textSize="20sp"
               android:layout_gravity="center"/>
           <LinearLayout
               android:gravity="end"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <ImageView
                   android:layout_gravity="center"
                   android:layout_width="50dp"
                   android:layout_height="wrap_content"
                   android:src="@drawable/next_icon" />
           </LinearLayout>
       </LinearLayout>
       <LinearLayout
           android:id="@+id/linearSetting"
           android:layout_marginBottom="15dp"
           android:layout_marginHorizontal="20dp"
           android:layout_gravity="center"
           android:background="@drawable/accout_background"
           android:layout_width="match_parent"
           android:layout_height="50dp">
           <ImageView
               android:layout_width="50dp"
               android:layout_height="30dp"
               android:src="@drawable/setting_icon"
               android:layout_gravity="center"/>
           <TextView
               android:textColor="@color/black"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Setting"
               android:textSize="20sp"
               android:layout_gravity="center"/>
           <LinearLayout
               android:gravity="end"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <ImageView
                   android:layout_gravity="center"
                   android:layout_width="50dp"
                   android:layout_height="wrap_content"
                   android:src="@drawable/next_icon" />
           </LinearLayout>
       </LinearLayout>
       <LinearLayout
           android:id="@+id/LinearContact"
           android:layout_marginBottom="15dp"
           android:layout_marginHorizontal="20dp"
           android:layout_gravity="center"
           android:background="@drawable/accout_background"
           android:layout_width="match_parent"
           android:layout_height="50dp">
           <ImageView
               android:layout_width="50dp"
               android:layout_height="30dp"
               android:src="@drawable/mail_icon"
               android:layout_gravity="center"/>
           <TextView
               android:textColor="@color/black"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Contact"
               android:textSize="20sp"
               android:layout_gravity="center"/>
           <LinearLayout
               android:gravity="end"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <ImageView
                   android:layout_gravity="center"
                   android:layout_width="50dp"
                   android:layout_height="wrap_content"
                   android:src="@drawable/next_icon" />
           </LinearLayout>
       </LinearLayout>
       <LinearLayout
           android:id="@+id/LinerShare"
           android:layout_marginBottom="15dp"
           android:layout_marginHorizontal="20dp"
           android:layout_gravity="center"
           android:background="@drawable/accout_background"
           android:layout_width="match_parent"
           android:layout_height="50dp">
           <ImageView
               android:layout_width="50dp"
               android:layout_height="30dp"
               android:src="@drawable/share_icon"
               android:layout_gravity="center"/>
           <TextView
               android:textColor="@color/black"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Share App"
               android:textSize="20sp"
               android:layout_gravity="center"/>
           <LinearLayout
               android:gravity="end"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <ImageView
                   android:layout_gravity="center"
                   android:layout_width="50dp"
                   android:layout_height="wrap_content"
                   android:src="@drawable/next_icon" />
           </LinearLayout>
       </LinearLayout>
       <LinearLayout
           android:id="@+id/LinerHelp"
           android:layout_marginBottom="15dp"
           android:layout_marginHorizontal="20dp"
           android:layout_gravity="center"
           android:background="@drawable/accout_background"
           android:layout_width="match_parent"
           android:layout_height="50dp">
           <ImageView
               android:layout_width="50dp"
               android:layout_height="30dp"
               android:src="@drawable/help_icon"
               android:layout_gravity="center"/>
           <TextView
               android:textColor="@color/black"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Help"
               android:textSize="20sp"
               android:layout_gravity="center"/>
           <LinearLayout
               android:gravity="end"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <ImageView
                   android:layout_gravity="center"
                   android:layout_width="50dp"
                   android:layout_height="wrap_content"
                   android:src="@drawable/next_icon" />
           </LinearLayout>
       </LinearLayout>

       <TextView
           android:id="@+id/textSignOut"
           android:textColor="#F55F1F"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:text="Sign Out"
           android:textSize="22sp"
           android:textStyle="bold"
           android:gravity="center"/>


   </LinearLayout>

</FrameLayout>